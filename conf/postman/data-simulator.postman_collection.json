				{
					"name": "Set Simulation Spec - Template Based",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has groups\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('groups');",
									"    pm.expect(jsonData.groups).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Response has deviceIds\", function () {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.groups && jsonData.groups.length > 0) {",
									"        pm.expect(jsonData.groups[0]).to.have.property('deviceIds');",
									"        pm.expect(jsonData.groups[0].deviceIds).to.be.an('array');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"groups\": [\n    {\n      \"count\": 3,\n      \"frequency\": 10,\n      \"metrics-template\": \"teapot\"\n    },\n    {\n      \"count\": 2,\n      \"frequency\": 5,\n      \"metrics-template\": \"lamp\"\n    }\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/simulation/spec",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"simulation",
								"spec"
							]
						},
						"description": "Set simulation specification using predefined metrics templates (teapot, lamp, etc.)"
					},
					"response": []
				},
				{
					"name": "Set Simulation Spec - Manual Metrics",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has groups\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('groups');",
									"    pm.expect(jsonData.groups).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"groups\": [\n    {\n      \"count\": 2,\n      \"frequency\": 12,\n      \"metrics\": {\n        \"temperature\": {\n          \"type\": \"number\",\n          \"min\": 20.0,\n          \"max\": 30.0\n        },\n        \"humidity\": {\n          \"type\": \"number\",\n          \"min\": 40.0,\n          \"max\": 60.0\n        },\n        \"status\": {\n          \"type\": \"string\",\n          \"values\": [\"active\", \"inactive\", \"standby\"]\n        },\n        \"pressure\": {\n          \"type\": \"integer\",\n          \"min\": 1000,\n          \"max\": 2000\n        }\n      }\n    }\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/simulation/spec",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"simulation",
								"spec"
							]
						},
						"description": "Set simulation specification with manually defined metrics (number, integer, string types)"
					},
					"response": []
				},
